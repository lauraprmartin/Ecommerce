---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
---

<main>
    <!-- Cabecera con una imagen -->
    <section class="header">
        <img src="/ruta/a/imagen.jpg" alt="Imagen de cabecera">
    </section>

    <!-- Sección 1: Promoción o presentación -->
    <section class="promocion">
        <h2>Promoción Especial</h2>
        <p>¡Descubre nuestras ofertas exclusivas!</p>
        <a href="/ofertas">Ver más</a>
    </section>

    <!-- Sección 2: Acerca de nosotros -->
    <section class="acerca-de">
        <h2>Acerca de Nosotros</h2>
        <p>Somos una empresa comprometida con la calidad y la satisfacción del cliente.</p>
        <a href="/nosotros">Leer más</a>
    </section>

    <!-- Sección 3: Nuestros productos -->
    <section class="productos">
        <h2>Nuestros Productos</h2>
        <p>Descubre nuestra amplia gama de productos de alta calidad.</p>
        <a href="/productos">Explorar</a>
    </section>
</main>